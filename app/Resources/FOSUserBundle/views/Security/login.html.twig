{% block fos_user_content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        <div class="form-group form-field">
            <div class="col-sm-3">
                <label for="username">{{ 'Nom d\'utilisateur'|trans }}</label>
            </div>
            <div class="col-sm-4">
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Nom d'utilisateur"/>
            </div>
        </div>

        <div class="form-group form-field">
            <div class="col-sm-3">
                <label for="password">{{ 'Mot de passe'|trans }}</label>
            </div>
            <div class="col-sm-4">
                <input type="password" id="password" name="_password" required="required" placeholder="Mot de passe"/>
            </div>
        </div>


        <div class="form-group form-field">
            <div class="col-sm-3">
                {#<label for="username">{{ 'Nom d\'utilisateur'|trans }}</label>#}
                <label for="remember_me">{{ 'Se souvenir de moi'|trans }}</label>
            </div>
            <div class="col-sm-4">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                {#<input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Nom d'utilisateur"/>#}
            </div>
        </div>

        <input type="submit" id="_submit" name="_submit" value="{{ 'Valider'|trans }}" />

    </form>
{% endblock fos_user_content %}
